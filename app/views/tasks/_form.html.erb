<%= form_with(model: task, local: true) do |f| %>
  
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul class="mb-0">
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "進行状況" %>
  <%= f.text_field :status %>
  
  <%= f.submit "投稿" %>
<% end %>
